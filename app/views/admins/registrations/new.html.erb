<div class="ui stackable two column grid" id="login_page">
  <div class="eight wide column" id="login_side">
  </div>
  <div class="eight wide column" id="login">
  
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui form'}) do |f| %>
        <%= f.error_notification %>
        <%= image_tag('logo.png', style: 'padding-top:2em;')%>

        <div class="field">
          <%= f.input :first_name, required: true, autofocus: true %>
        </div> 
        <div class="field">
          <%= f.input :last_name, required: true %>
        </div>
        <div class="field">
          <%= f.input :email, required: true %>    
        </div>
        <div class="field">
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>      
        </div>
        <div class="field">
          <%= f.input :password_confirmation, required: true %>    
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'ui secondary button' %>
        </div>
      <br>
      <%= link_to 'Admin Login', root_path %> 
      <% end %>

  </div>
</div>
